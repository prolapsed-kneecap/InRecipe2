<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/gradient"
    tools:context=".ui.fragment.DishFragment">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/dish_image"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_marginHorizontal="50dp"
            android:scaleType="centerInside"
            tools:src="@drawable/apple_pie" />

        <TextView
            android:id="@+id/dish_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mont_bold"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="35sp"
            tools:text="Имя Блюда" />

        <TextView
            android:id="@+id/dish_ingredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mont_regular"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="25sp"
            tools:text="Индгредиенты" />

        <TextView
            android:id="@+id/dish_recipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mont_regular"
            android:gravity="center_horizontal"
            android:text="@string/recipe_fruit_salad"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>